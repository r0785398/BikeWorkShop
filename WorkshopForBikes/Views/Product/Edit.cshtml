@model Models.Product

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Product - Edit";
}

<h1>Product / Edit</h1>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Product name" required />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Price"></label>
            <input type="text" class="form-control" asp-for="Price" placeholder="Price" />
        </div>
    </div>
    <input type="submit" value="Save" />
    <button class="btn btn-primary" asp-controller="Product" asp-action="Index">Back to list</button>

</form>


